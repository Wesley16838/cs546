
<section class="bookRequest-full">
    <div class="form-container wow fadeIn" data-wow-delay="1s" >
     <div class="signup-topic">
            <a href="/"><img class="wow fadeIn" data-wow-delay=".5s" id="logo" src="../../public/assets/logo_bk200.jpg" alt="Logo" style="width:5em"></a>
            <h1 class="wow fadeIn" data-wow-delay=".5s" >Request us a book we don't have in our catalogue</h1>
     </div>
            <form action="/user/brequest" class="server-form" method="post" id="static-form">
                <div class="form-group half-form">
                    <label for="bookname" style="font-weight: normal;">Book Name</label>
                    <input type="text" class="form-control" id="bookname" name="bookname" placeholder="Book Name" value="{{bookname}}">
                </div>
                <div class="form-group half-form">
                    <label for="isbn" style="font-weight: normal;">ISBN</label>
                    <input type="text" class="form-control" id="isbn" name="isbn" placeholder="ISBN" value="{{isbn}}">
                </div>
                <div class="form-group half-form">
                    <label for="description" style="font-weight: normal;">Description</label>
                    <input type="text" class="form-control" id="description" name="description" placeholder="Description" value="{{description}}">
                </div>
                
               
                <div class="form-group">
                    <button type="submit" class="btn_signup">Submit</button>
                </div>
                
                 {{#if hasErrors }}
                <div class="form-group">
                    <ul class="error-list" style="padding-inline-start: 0px;">
        
                        <li style="list-style: none;">
                        <p class="not-found">{{error}}</p>
                        </li>
                    </ul>
                </div>
                {{/if}}
            </form>
     
    </div>
</section>


